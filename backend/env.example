# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# For local development
MONGODB_URI=mongodb://localhost:27017/startup-village-county
# For production, use MongoDB Atlas or your hosted MongoDB
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/startup-village-county

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
# For development
FRONTEND_URL=http://localhost:3000
# For production
# FRONTEND_URL=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Custom Domain Configuration
CUSTOM_DOMAIN=yourdomain.com
BASE_URL=https://yourdomain.com

# WhatsApp Configuration
WHATSAPP_PHONE=7676558020
WHATSAPP_MESSAGE=Hello! I would like to know more about your services.
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-id
WHATSAPP_BUSINESS_ID=your-whatsapp-business-id

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
